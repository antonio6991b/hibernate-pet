<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ru.bolgov.restart.hibernate.pojo.Car" table="CARS">
        <meta attribute="class-description">
            This class contains data for cars.
        </meta>

        <id name = "id" type="int" column="ID">
            <generator class="identity"/>
        </id>
        <property name="brand" column="BRAND" type="string"/>
        <property name="owner" column="OWNER" type="string"/>
        <property name="production" column="PRODUCTION" type="java.sql.Date"/>
        <property name="mileage" column="MILEAGE" type="integer"/>
            
    </class>

</hibernate-mapping>